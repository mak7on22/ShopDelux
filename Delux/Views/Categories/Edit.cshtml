@model Delux.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Категории</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label" required></label>
                <input asp-for="CategoryName" class="form-control" required />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group save">
                <button class="pkm" type="submit" value="Save">Сохранить</button>
            </div>
        </form>
    </div>
</div>

<div>
    <button class="pkm pkminfo"><a asp-action="Index">Назад</a></button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
